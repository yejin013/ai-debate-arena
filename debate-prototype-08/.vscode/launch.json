{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python 디버거: 현재 파일",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
          "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/app"
      }
    },
    {
      "name": "Streamlit 앱 디버깅",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
          "run",
          "${file}",
          "--server.port=8501",
          "--server.headless=true"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
          "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/app"
      }
    },
    {
      "name": "FastAPI 서버 디버깅",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
          "server.main:app",
          "--reload",
          "--port=8000",
          "--host=0.0.0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
          "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/server"
      },
      "cwd": "${workspaceFolder}"
    }
  
  ]
}