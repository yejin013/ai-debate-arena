{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python 디버거: 현재 파일",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Streamlit 앱 디버깅",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
          "run",
          "${workspaceFolder}/app/main.py",
          "--server.port=8501",
          "--server.headless=true",
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
          "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/.."
      }
  }
  ]
}